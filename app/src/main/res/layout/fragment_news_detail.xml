<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="androidx.lifecycle.LiveData" />

        <import type="com.oscarliang.flow.model.News" />

        <import type="com.oscarliang.flow.ui.common.ItemClickListener" />

        <variable
            name="news"
            type="LiveData&lt;News>" />

        <variable
            name="backListener"
            type="com.oscarliang.flow.ui.common.ClickListener" />

        <variable
            name="bookmarkListener"
            type="ItemClickListener&lt;News>" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_latest_news_item_height"
                app:collapsedTitleTextColor="@color/white"
                app:contentScrim="@android:color/transparent"
                app:expandedTitleTextColor="@color/white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:maxLines="10"
                app:title="@{news.title}">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{news.image}"
                    app:layout_collapseMode="parallax" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/color_gradient" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_toolbar_height"
                    android:paddingTop="@dimen/interval_small"
                    app:collapseIcon="@drawable/ic_back"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@drawable/ic_back"
                    app:navigationOnClickListener="@{() -> backListener.onClick()}" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_fg"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_round_rect">

                <TextView
                    android:id="@+id/text_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_large"
                    android:background="@drawable/ic_label"
                    android:backgroundTint="@color/purple_500"
                    android:paddingStart="@dimen/margin_medium"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingEnd="@dimen/margin_medium"
                    android:paddingBottom="@dimen/margin_small"
                    android:text="@{news.source.title}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_body_small"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Source" />

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="@{news.date}"
                    android:textColor="@color/gray_700"
                    android:textSize="@dimen/text_body_small"
                    app:layout_constraintStart_toStartOf="@id/text_source"
                    app:layout_constraintTop_toBottomOf="@id/text_source"
                    tools:text="yyyy-MM-dd" />

                <TextView
                    android:id="@+id/text_body"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:lineSpacingExtra="@dimen/margin_small"
                    android:text="@{news.body}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_body_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_date"
                    tools:text="News body more body more body more body more body more body more body" />

                <FrameLayout
                    android:id="@+id/frame_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:layout_marginBottom="@dimen/interval_large"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_body" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_large"
            android:backgroundTint="@{news.bookmark ? @color/purple_500 : @color/gray_500}"
            android:elevation="@dimen/margin_large"
            android:onClick="@{() -> bookmarkListener.onClick(news)}"
            android:src="@{news.bookmark ? @drawable/ic_bookmark : @drawable/ic_bookmark_border}"
            app:behavior_autoHide="true"
            app:borderWidth="0dp"
            app:layout_anchor="@id/appbar"
            app:layout_anchorGravity="right|bottom"
            app:tint="@color/white"
            tools:backgroundTint="@color/gray_500"
            tools:src="@drawable/ic_bookmark_border" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>